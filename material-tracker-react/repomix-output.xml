        );
        break;
      case 'exact':
        dynamicCells = (
          <>
            <td className="px-6 py-4 text-center text-sm text-gray-500 dark:text-gray-400">
              {expected}
            </td>
            <td className="px-6 py-4 text-center text-sm font-bold text-blue-500 dark:text-blue-400">
              {delivered}
